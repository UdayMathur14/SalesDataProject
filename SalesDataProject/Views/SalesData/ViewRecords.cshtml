    .error-message {
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: red; /* Softer red for a less intense tone */
        color: black;
        padding: 10px 12px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 500;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        z-index: 1000;
        transition: opacity 0.4s ease-out;
        opacity: 0.95;
    }

        .error-message.collor {
            background-color: greenyellow;
        }

