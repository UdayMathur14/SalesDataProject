@model IEnumerable<SalesDataProject.Models.ProspectCustomer>

<form asp-action="UpdateBlockedEmails" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Customer Code</th>
                <th>Customer Name</th>
                <th>Email</th>
                <th>Contact Number</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedCustomers" value="@customer.ID" />
                    </td>
                    <td>@customer.CUSTOMER_CODE</td>
                    <td>@customer.CUSTOMER_NAME</td>
                    <td>@customer.CUSTOMER_EMAIL</td>
                    <td>@customer.CUSTOMER_CONTACT_NUMBER</td>
                    <td>@(customer.IsEmailBlocked ? "Blocked" : "Clean")</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" name="action" value="block" class="btn btn-primary">Mark as Blocked</button>
    <button type="submit" name="action" value="unblock" class="btn btn-secondary">Mark as Clean</button>
</form>