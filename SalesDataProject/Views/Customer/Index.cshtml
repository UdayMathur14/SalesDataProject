@model SalesDataProject.Models.Customer // Adjust to your actual namespace

@{
    ViewData["Title"] = "Create Customer";
}
<div class="container mt-3">
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successAlert" class="alert alert-custom alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>
<div class="container mt-3">
    @if (TempData["ErrorMessage"] != null)
    {
        <div id="FailureAlert" class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>
<div class="container mt-4">
    <h2 class="mb-4 text-header" style="text-align:center">Create Customer</h2>

    <!-- Manual Entry Form -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title text-secondary"></h4>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-row mb-2 d-flex gap-4">
                    <div class="col-md-3">
                        <label for="CUSTOMER_CODE" class="font-weight-bold">Customer Code</label>
                        <input asp-for="CUSTOMER_CODE" class="form-control form-control-sm" id="CUSTOMER_CODE" />
                        <span asp-validation-for="CUSTOMER_CODE" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="CUSTOMER_NAME" class="font-weight-bold">Customer Name <span class="text-danger">*</span></label>
                        <input asp-for="CUSTOMER_NAME" class="form-control form-control-sm" />
                        <span asp-validation-for="CUSTOMER_NAME" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="CONTACT_PERSON" class="font-weight-bold">Contact Person</label>
                        <input asp-for="CONTACT_PERSON" class="form-control form-control-sm" />
                        <span asp-validation-for="CONTACT_PERSON" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row mb-2 d-flex gap-4">
                    <div class="col-md-3">
                        <label asp-for="PhoneCode" class="font-weight-bold">Phone Code <span class="text-danger">*</span></label>
                        <select asp-for="PhoneCode" class="form-control form-control-sm" id="PhoneCode">
                            <option value="">-- Select Code --</option>
                            @foreach (var code in ViewBag.PhoneCodes as SelectList)
                            {
                                <option value="@code.Text">@code.Text</option>
                            }
                        </select>
                        <span asp-validation-for="PhoneCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="CUSTOMER_CONTACT_NUMBER1" class="font-weight-bold">Contact Number 1  <span class="text-danger">*</span> </label>
                        <input asp-for="CUSTOMER_CONTACT_NUMBER1" class="form-control form-control-sm" />
                        <span asp-validation-for="CUSTOMER_CONTACT_NUMBER1" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="CUSTOMER_CONTACT_NUMBER2" class="font-weight-bold">Contact Number 2</label>
                        <input asp-for="CUSTOMER_CONTACT_NUMBER2" class="form-control form-control-sm" />
                        <span asp-validation-for="CUSTOMER_CONTACT_NUMBER2" class="text-danger"></span>
                    </div>
                    
                </div>

                <div class="form-row mb-2 d-flex gap-4">
                    <div class="col-md-3">
                        <label asp-for="CUSTOMER_CONTACT_NUMBER3" class="font-weight-bold">Contact Number 3</label>
                        <input asp-for="CUSTOMER_CONTACT_NUMBER3" class="form-control form-control-sm" />
                        <span asp-validation-for="CUSTOMER_CONTACT_NUMBER3" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="CUSTOMER_EMAIL" class="font-weight-bold">Email <span class="text-danger">*</span></label>
                        <input asp-for="CUSTOMER_EMAIL" class="form-control form-control-sm" />
                        <span asp-validation-for="CUSTOMER_EMAIL" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="COUNTRY" class="font-weight-bold">Country <span class="text-danger">*</span></label>
                        <select asp-for="COUNTRY" class="form-control form-control-sm" id="Country" name="Country">
                            <option value="">-- Select Country --</option>
                            @foreach (var country in ViewBag.Countries as SelectList)
                            {
                                <option value="@country.Text">@country.Text</option>
                            }
                        </select>
                        <span asp-validation-for="COUNTRY" class="text-danger"></span>
                    </div>
                   
                    
                </div>
                <div class="form-row mb-2 d-flex gap-4">
                    <div class="col-md-3">
                        <label asp-for="STATE" class="font-weight-bold">State <span class="text-danger">*</span></label>
                        <input asp-for="STATE" class="form-control form-control-sm" />
                        <span asp-validation-for="STATE" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="CITY" class="font-weight-bold">City <span class="text-danger">*</span></label>
                        <input asp-for="CITY" class="form-control form-control-sm" />
                        <span asp-validation-for="CITY" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

 
    

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script>
    $(document).ready(function () {
        // Check if the success alert exists
        if ($("#successAlert").length) {
            // Set a timeout to hide the alert after 3 seconds
            setTimeout(function () {
                $("#successAlert").alert('close');
            }, 2000); // 3000 milliseconds = 3 seconds
        }
    });
          $(document).ready(function () {
            // Check if the success alert exists
            if ($("#FailureAlert").length) {
                // Set a timeout to hide the alert after 3 seconds
                setTimeout(function () {
                    $("#FailureAlert").alert('close');
                }, 3000); // 3000 milliseconds = 3 seconds
            }
        });
</script>

