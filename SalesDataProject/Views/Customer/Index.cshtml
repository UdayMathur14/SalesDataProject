@model SalesDataProject.Models.Customer // Adjust to your actual namespace

@{
    ViewData["Title"] = "Create Customer";
}
<div class="container mt-3">
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successAlert" class="alert alert-custom alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>
<div class="container mt-3">
    @if (TempData["ErrorMessage"] != null)
    {
        <div id="FailureAlert" class="alert alert-custom alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>
<div class="container mt-4">
    <h2 class="mb-4 text-header" style="text-align:center">Create Customer</h2>

    <!-- Manual Entry Form -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title text-secondary"></h4>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-row mb-2 d-flex gap-4">
                    <div class="col-md-3">
                        <label for="CUSTOMER_CODE" class="font-weight-bold">Customer Code</label>
                        <input asp-for="CUSTOMER_CODE" class="form-control form-control-sm" id="CUSTOMER_CODE" />
                        <span asp-validation-for="CUSTOMER_CODE" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="CUSTOMER_NAME" class="font-weight-bold">Customer Name</label>
                        <input asp-for="CUSTOMER_NAME" class="form-control form-control-sm" />
                        <span asp-validation-for="CUSTOMER_NAME" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="CUSTOMER_EMAIL" class="font-weight-bold">Email</label>
                        <input asp-for="CUSTOMER_EMAIL" class="form-control form-control-sm" />
                        <span asp-validation-for="CUSTOMER_EMAIL" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row mb-2 d-flex gap-4">
                    <div class="col-md-3">
                        <label asp-for="CUSTOMER_CONTACT_NUMBER" class="font-weight-bold">Contact Number</label>
                        <input asp-for="CUSTOMER_CONTACT_NUMBER" class="form-control form-control-sm" />
                        <span asp-validation-for="CUSTOMER_CONTACT_NUMBER" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="COUNTRY" class="font-weight-bold">Country</label>
                        <input asp-for="COUNTRY" class="form-control form-control-sm" />
                        <span asp-validation-for="COUNTRY" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="CITY" class="font-weight-bold">City</label>
                        <input asp-for="CITY" class="form-control form-control-sm" />
                        <span asp-validation-for="CITY" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row mb-2 d-flex gap-4">
                    <div class="col-md-3">
                        <label asp-for="STATE" class="font-weight-bold">State</label>
                        <input asp-for="STATE" class="form-control form-control-sm" />
                        <span asp-validation-for="STATE" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

