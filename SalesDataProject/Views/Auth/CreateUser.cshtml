@model SalesDataProject.Models.AuthenticationModels.User

<form asp-action="CreateUser" method="post">
    <div>
        <label>Username</label>
        <input type="text" asp-for="Username" />
    </div>
    <div>
        <label>Password</label>
        <input type="password" asp-for="Password" />
    </div>
    <div>
        <label>Can Access Customer</label>
        <input type="checkbox" asp-for="CanAccessCustomer" />
    </div>
    <div>
        <label>Can Access Sales</label>
        <input type="checkbox" asp-for="CanAccessSales" />
    </div>
    <button type="submit">Create User</button>
</form>
