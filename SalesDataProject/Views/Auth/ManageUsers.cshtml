<!-- Views/Auth/ManageUsers.cshtml -->
@model IEnumerable<SalesDataProject.Models.AuthenticationModels.User>

<h2>Manage Users</h2>

<a asp-action="CreateUser">Create User</a>

<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Can Access Customer</th>
            <th>Can Access Sales</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.CanAccessCustomer</td>
                <td>@user.CanAccessSales</td>
            </tr>
        }
    </tbody>
</table>
