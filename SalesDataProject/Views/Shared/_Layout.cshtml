<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SalesDataProject.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .navbar-nav .nav-link {
            transition: all 0.1s ease-in-out !important;
        }

            .navbar-nav .nav-link:hover {
                color: red !important; /* Bootstrap primary color */
                text-decoration: underline !important;
            }
    </style>
    <style>
        /* Success alert styles */
        .alert-success-custom {
            background-color: #e7f9ee; /* Light green background */
            border-color: #c3e6cb; /* Darker green border */
            color: #155724; /* Dark green text */
            padding: 15px; /* Padding for better spacing */
            border-radius: 5px; /* Rounded corners */
            font-weight: bold; /* Bold text */
        }

            .alert-success-custom .close {
                color: #e7f9ee; /* Close button color */
                opacity: 0.5; /* Slightly transparent */
            }

                .alert-success-custom .close:hover {
                    opacity: 0.75; /* Change opacity on hover */
                }

        /* Failure alert styles */
        .alert-failure-custom {
            background-color: #f8d7da; /* Light red background */
            color: #721c24; /* Dark red text */
            border-color: #f5c6cb; /* Light red border */
            padding: 15px; /* Padding for better spacing */
            border-radius: 5px; /* Rounded corners */
            font-weight: bold; /* Bold text */
        }

            .alert-failure-custom .close {
                color: #721c24; /* Close button color */
                opacity: 0.5; /* Slightly transparent */
            }

                .alert-failure-custom .close:hover {
                    opacity: 0.75; /* Change opacity on hover */
                }

        /* Navbar styles */
        header {
            background-color: #f8f9fa; /* Light background */
        }

        .navbar {
            transition: background-color 0.3s ease; /* Smooth transition for background color */
        }

            .navbar:hover {
                background-color: #e2e6ea; /* Change background color on hover */
            }

        .nav-link {
            transition: color 0.3s ease; /* Smooth transition for text color */
        }

            .nav-link:hover {
                color: #007bff; /* Change text color on hover */
            }

        .navbar-brand {
            font-size: 1.5rem; /* Increase the brand size */
            font-weight: bold; /* Make the brand text bold */
        }

        .circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #007bff; /* Bootstrap Primary Color */
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
        }

            .circle:hover {
                background-color: #0056b3; /* Darker shade for hover effect */
            }

    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-start align-items-center gap-4">
                        <li class="nav-item">
                            <a class="nav-link text-primary fw-bold fst-italic fs-5 text-uppercase"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                Dashboard
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-3">
                        <!-- Circle Icon -->
                        <div class="circle bg-primary d-flex justify-content-center align-items-center">
                            <a href="#profileMenu" data-bs-toggle="dropdown" aria-expanded="false" class="text-white text-decoration-none">
                                <i class="bi bi-person fs-5"></i>
                            </a>
                            <!-- Dropdown Menu -->
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm" id="profileMenu">
                               @*  <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">
                                        Profile
                                    </a>
                                </li> *@
                                <li>
                                    <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" style="display: inline;">
                                        <button type="submit" class="dropdown-item">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Ennoble IP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
