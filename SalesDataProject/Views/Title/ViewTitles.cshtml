<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
@model List<SalesDataProject.Models.TitleValidationViewModel>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" id="errorMessage">
        @TempData["Error"]
    </div>
}
<div class="container mt-4">
    <h2 class="mb-4">Title Validation Records</h2>
    <div class="text-center mb-4">
        <h1 class="text-primary" style="color:black"></h1>
        @if (TempData["messagesuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" id="successMessage" role="alert">
                <p class="mb-0">@TempData["messagesuccess"]</p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
    <form id="deleteForm" method="post" action="/Title/DeleteSelected">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th><input type="checkbox" id="selectAll" /></th> <!-- Select all checkbox -->
                    <th>Id</th>
                    @* <th>Row Number</th> *@
                    <th>Code Reference</th>
                    <th>Invoice Number</th>
                    <th>Title</th>
                    <th>Created By</th>
                    <th>Created On</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())

                {
                    foreach (var record in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="selectedIds" value="@record.Id" />
                            </td>
                            <td>@record.Id</td>
                            @* <td>@record.RowNumber</td> *@
                            <td>@record.CodeReference</td>
                            <td>@record.InvoiceNumber</td>
                            <td>@record.Title</td>
                            <td>@record.CREATED_BY</td>
                            <td>@record.CREATED_ON.ToString("yyyy-MM-dd")</td> <!-- Format DateOnly -->
                            <td>@record.Status</td>
                        </tr>
                    }

                }

                else

                {
                    <tr>
                        <td colspan="9" class="text-center">No records found</td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-danger mt-3">Delete Selected</button>
    </form>
</div>

<script>
    $(document).ready(function () {
        $("#selectAll").click(function () {
            $('input[name="selectedIds"]').prop('checked', this.checked);
        });
    });
</script>
