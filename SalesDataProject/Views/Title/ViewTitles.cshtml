@{
    var hasDeleteAccess = ViewData["CanDeleteTitles"]?.ToString();
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

@model List<SalesDataProject.Models.TitleValidationViewModel>

<div class="container mt-4 p-4 rounded-4 shadow-sm"
     style="background: linear-gradient(135deg, #f8f9fa, #e8f0fe); border: 1px solid #dee2e6;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text fw-bold text m-0">
            📖 Title Records
        </h1>
        <a href="@Url.Action("Index", "Title")"
           class="btn fw-semibold shadow-sm px-4 rounded-3"
           style="background-color: red; color: white;">
            ⬅️ Back
        </a>
    </div>

    <!-- Filter Form -->
    <form id="filterForm" method="get" action="/Title/querydata" class="p-4 rounded-4 shadow-sm"
          style="background: linear-gradient(135deg, #f8f9fa, #e8f0fe); border: 1px solid black;">
        <div class="row g-3 align-items-center">
            <div class="col-md-3">
                <input type="text" name="filterId"
                       class="form-control form-control-sm shadow-sm rounded-3 border-primary-subtle"
                       placeholder="🔎 Filter by ID" value="@ViewData["FilterId"]" />
            </div>
            <div class="col-md-3">
                <input type="text" name="filterCodeReference"
                       class="form-control form-control-sm shadow-sm rounded-3 border-primary-subtle"
                       placeholder="🔎 Filter by Code Reference" value="@ViewData["FilterCodeReference"]" />
            </div>
            <div class="col-md-3">
                <input type="text" name="filterTitle"
                       class="form-control form-control-sm shadow-sm rounded-3 border-primary-subtle"
                       placeholder="🔎 Filter by Title" value="@ViewData["FilterTitle"]" />
            </div>
            <div class="col-md-3">
                <input type="text" name="titleYear"
                       class="form-control form-control-sm shadow-sm rounded-3 border-primary-subtle"
                       placeholder="📅 Filter by Year (2023-24)" value="@ViewData["TitleYear"]" />
            </div>

            <div class="col-md-3 d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-gradient-primary fw-semibold shadow-sm px-4 rounded-3"
                        style="background: linear-gradient(45deg, #4facfe, #00f2fe); border: none; color: white;">
                    🔍 Filter
                </button>
                <button type="button" class="btn fw-semibold shadow-sm px-4 rounded-3" id="clearButton"
                        style="background: linear-gradient(45deg, #ff758c, #ff7eb3); border: none; color: white;">
                    ❌ Clear
                </button>
               
            </div>
            <div class="col-md-3 mt-2 justify-content-end">
                <a href="/Title/DownloadExcel" class="btn fw-semibold shadow-sm rounded-3"
                   style="background: linear-gradient(45deg, #28a745, #218838); border: none; color: white;">
                    ⬇️ Download Excel
                </a>
            </div>
            
        </div>
        
        

    </form>



    <!-- Table -->
    <form id="deleteForm" method="post" action="/Title/DeleteSelected">
        <div class="table-responsive mt-4 shadow-sm rounded" style="max-height: 820px; overflow-y: auto; border: 1px solid #ddd;">
            <table class="table table-hover text-start">
                <thead class="bg-dark text-light">
                    <tr>
                        @if (hasDeleteAccess == "True")
                        {
                            <th><input type="checkbox" id="selectAll" /></th>
                        }
                        <th>Id</th>
                        <th>Code Ref</th>
                        <th>Invoice No</th>
                        <th>Title</th>
                        <th>Created By</th>
                        <th style="min-width: 100px;">Year</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var record in Model)
                        {
                            <tr id="record-@record.Id" class="align-middle">
                                @if (hasDeleteAccess == "True")
                                {
                                    <td>
                                        <input type="checkbox" name="selectedIds" value="@record.Id" class="form-check-input" />
                                    </td>
                                }
                                <td>@record.Id</td>
                                <td>@record.CodeReference</td>
                                <td>@record.InvoiceNumber</td>
                                <td>@record.Title</td>
                                <td>@record.CREATED_BY</td>
                                <td>@record.TitleYear</td>
                                @* <td>@record.CREATED_ON.ToString("yyyy-MM-dd")</td> *@
                                <td>
                                    <span class="badge bg-success">@record.Status</span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No records found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (hasDeleteAccess == "True")
        {
            <button type="submit" class="btn btn-danger mt-3">🗑️ Delete Selected</button>
        }
    </form>
</div>

<script>
    $(document).ready(function () {
        $("#selectAll").click(function () {
            $('input[name="selectedIds"]').prop('checked', this.checked);
        });
    });
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const urlParams = new URLSearchParams(window.location.search);
        const filterId = urlParams.get("filterId");

        if (filterId) {
            const row = document.getElementById(`record-${filterId}`);
            if (row) {
                row.scrollIntoView({ behavior: "smooth", block: "center" });
                row.style.backgroundColor = "#ffff99";
            }
        }
    });
</script>

<script>
    document.getElementById('clearButton').addEventListener('click', function () {
        document.getElementById('filterForm').reset();
        window.location.href = '/Title/ViewTitles';
    });
</script>

<style>
    body {
        background-color: #f8f9fa;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn {
        border-radius: 10px;
    }

    .badge {
        font-size: 14px;
        padding: 5px 10px;
    }
</style>
